-var titulo = "Titulo principal"
-var titulos = ["Titulo principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3"]

mixin caja(imagen, titulo, contenido)
  .caja
    .caja__imagen: img(src="images/"+imagen)
    .caja__contenido
      h3=titulo
      p=contenido


doctype html
html(lang="es")
  include head.pug
  body
    header
      h1 CryptoGames
      if usuario
        a Hola #{usuario}
      else
        a.boton(href="#") Registro
    block contenidos